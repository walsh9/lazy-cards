{{#each this.graphics as |graphic index|}}
  <div class="graphic {{class-for "graphic" this.size}} i{{index}}">
    <DitheredImage
      @width={{this.graphicSize}}
      @height={{this.graphicSize}}
      @src={{this.graphicUrl}}
      @ditherMethod="sierra"
    />
  </div>
{{/each}}


<TextZone
  @active={{eq @editMode "text"}}
  @font={{this.font}}
  @text={{@data.text}}
  @updateText={{action @updateText}}
  @doneEditing={{action @doneEditing}}
/>