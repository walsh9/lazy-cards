{{#if this.choosingGraphics}}
  <EmojiSelectorGraphics
    @emojiList={{this.emojiList}}
    @graphicSelectAction={{action "setGraphic"}}
    @cancelAction={{action "cancel"}}
  />
{{else}}
  <EmojiSelectorCategories
    @categoryList={{this.categoryList}}
    @categorySelectAction={{action "setCategory"}}
    @cancelAction={{action this.menuCancelAction}}
  />
{{/if}}